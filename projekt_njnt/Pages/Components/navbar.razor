<MudThemeProvider />
<MudLayout>
    <MudAppBar Elevation="1" Style="@($"background-color:{Colors.Teal.Default};")">
        <MudText Typo="Typo.h5" Class="ml-3">
            <MudIcon Icon="@Icons.Material.Filled.LocalFireDepartment" />
            HMX
            </MudText>
        <MudSpacer />
        <MudButton  Class="mx-2" Variant="Variant.Filled" Style="@($"background-color:{Colors.Orange.Lighten2};")">
            <MudLink Href="#" Underline="Underline.None" Color="Color.Dark">Login</MudLink>
            </MudButton>
        <MudButton @onclick="Register" Class="mx-2" Variant="Variant.Filled" Style="@($"background-color:{Colors.BlueGrey.Lighten4};")">
            <MudLink Href="#" Underline="Underline.None" Color="Color.Dark">Register</MudLink>
            </MudButton>
    </MudAppBar>
    <MudMainContent>
        @*Body*@
    </MudMainContent>
</MudLayout>
@inject IDialogService DialogService
@code {
    private void Register() {
        var options = new DialogOptions() { CloseButton = true, };
        DialogService.Show<RegistrationPage>("Register",options);
    }
    
}
